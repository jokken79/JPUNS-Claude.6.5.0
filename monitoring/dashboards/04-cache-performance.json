{
  "dashboard": {
    "title": "Cache Performance",
    "tags": ["cache", "redis", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "15s",
    "panels": [
      {
        "id": 1,
        "title": "Cache Hit Rate (%)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {"mode": "absolute", "steps": [{"color": "red", "value": 0}, {"color": "yellow", "value": 30}, {"color": "green", "value": 70}]}
          }
        }
      },
      {
        "id": 2,
        "title": "Hit vs Miss Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m])",
            "legendFormat": "Hits/s",
            "refId": "A"
          },
          {
            "expr": "rate(redis_keyspace_misses_total[5m])",
            "legendFormat": "Misses/s",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "ops/s", "custom": {"lineWidth": 2}}
        }
      },
      {
        "id": 3,
        "title": "Memory Usage (MB)",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 2048,
            "unit": "MB",
            "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 1500}, {"color": "red", "value": 2000}]}
          }
        }
      },
      {
        "id": 4,
        "title": "Connected Clients",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "redis_connected_clients",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "short"}
        }
      },
      {
        "id": 5,
        "title": "Evictions/sec",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(redis_evicted_keys_total[5m])",
            "legendFormat": "Evictions",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "ops/s", "custom": {"lineWidth": 2}, "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 1}, {"color": "red", "value": 5}]}}
        }
      }
    ],
    "schemaVersion": 38,
    "style": "dark",
    "templating": {"list": []},
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {}
  },
  "overwrite": true
}
