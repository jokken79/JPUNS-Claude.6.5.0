{
  "dashboard": {
    "title": "Database Metrics",
    "tags": ["database", "postgresql", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "15s",
    "panels": [
      {
        "id": 1,
        "title": "Active Connections",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "short",
            "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 80}, {"color": "red", "value": 95}]}
          }
        }
      },
      {
        "id": 2,
        "title": "Query Performance (ms)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(pg_stat_statements_mean_time[5m])",
            "legendFormat": "Mean Query Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "ms", "custom": {"lineWidth": 2}, "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 100}, {"color": "red", "value": 500}]}}
        }
      },
      {
        "id": 3,
        "title": "Slow Queries (>1s)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "pg_slow_queries_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {"mode": "absolute", "steps": [{"color": "green", "value": 0}, {"color": "yellow", "value": 5}, {"color": "red", "value": 20}]}
          }
        }
      },
      {
        "id": 4,
        "title": "Database Size (GB)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "pg_database_size_bytes / 1024 / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "GB", "decimals": 2}
        }
      },
      {
        "id": 5,
        "title": "Sequential Scans/sec",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(pg_stat_user_tables_seq_scan[5m])",
            "legendFormat": "{{schemaname}}.{{relname}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "scans/s", "custom": {"lineWidth": 2}}
        }
      }
    ],
    "schemaVersion": 38,
    "style": "dark",
    "templating": {"list": []},
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {}
  },
  "overwrite": true
}
